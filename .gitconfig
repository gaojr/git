[user]
    name = gaojunru
    email = gaojunru@thunisoft.com
[alias]
    br = branch
    co = checkout
    rb = rebase
    st = status
    # 克隆时初始化子模块
    cr = clone --recursive
    # 拉取所有分支 HEAD 信息
    fa = fetch --all
     # 切换到 master 分支
    com = checkout master
    # 切换到 develop 分支
    cod = checkout develop
    # 基于 develop 分支变基
    rbd = rebase develop
    # 在其他分支上更新 develop 分支
    # git checkout develop && git rebase && git checkout -
    # 在其他分支上更新 develop 分支并基于 develop 分支变基
    # git checkout develop && git rebase && git checkout - && git rebase develop
    # 获取远程分支到本地分支
    # git checkout origin/remoteName -b localName
    # 为本地分支连接远程分支
    # git branch --set-upstream-to=origin/remoteName localName
    # 分支重命名
    rename = branch -m
    # 安全强制推送
    pf = push --force-with-lease
    # 撤销
    rs = reset
    rsh = reset --hard
    # 上一个
    last = reset HEAD~1
    back = reset --hard HEAD~1
    # 当前分支日志
    lg = log --color --graph --pretty=format:'%Cred%h%Creset - %s %Cblue<%cn> %Cgreen(%cr) %C(yellow)%d' --abbrev-commit
    # 所有分支日志
    lga = log --color --graph --pretty=format:'%Cred%h%Creset - %s %Cblue<%cn> %Cgreen(%cr) %C(yellow)%d' --abbrev-commit --all
    # 暂存
    temp = commit -a -m 'temp'
    # 对比两个分支
    diffbr = diff --stat
    # 与 develop 分支对比
    diffbrd = diff --stat develop
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
